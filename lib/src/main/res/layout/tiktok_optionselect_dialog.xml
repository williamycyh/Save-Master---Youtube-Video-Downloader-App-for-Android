<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/md_white_1000"
    app:cardCornerRadius="12dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">


        <TextView
            android:id="@+id/dig_txt_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="Choose one to download" />

        <Button
            android:id="@+id/dig_btn_met0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_bg_download_screen"
            android:text="Method 0"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/dig_btn_met1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_bg_download_screen"
            android:text="Method 1"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/dig_btn_met2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_bg_download_screen"
            android:text="Method 2"

            android:textColor="@color/white" />

        <Button
            android:id="@+id/dig_btn_met3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_bg_download_screen"
            android:text="Method 3"

            android:textColor="@color/white" />

        <Button
            android:id="@+id/dig_btn_met4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_bg_download_screen"
            android:text="Method 4"

            android:textColor="@color/white" />

        <Button
            android:id="@+id/dig_btn_met5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_bg_download_screen"
            android:text="Method 5"
            android:textColor="@color/white"

            android:visibility="gone" />

        <Button
            android:id="@+id/dig_btn_met6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_bg_download_screen"
            android:text="Method 6"
            android:textColor="@color/white"

            android:visibility="gone" />


        <Button
            android:id="@+id/dig_btn_cancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/d_haperound"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Cancel"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.cardview.widget.CardView>